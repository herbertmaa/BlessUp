<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="2dp"
    android:paddingLeft="10dp"
    android:paddingRight="60dp"
    android:clipToPadding="false"
    android:layout_margin="10dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/their_message"
        android:clipToPadding="false"
        android:paddingLeft="10dp"
        android:paddingRight="20dp">

        <TextView
            android:id="@+id/textViewName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:paddingLeft="6dp"
            android:text="Rose"
            android:textColor="@color/chatName"
            android:textStyle="bold"></TextView>

        <TextView
            android:id="@+id/textViewMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewName"
            android:layout_alignLeft="@+id/textViewName"
            android:elevation="0dp"
            android:paddingHorizontal="6dp"
            android:paddingVertical="1dp"
            android:text="How are you doing? This is a long message that should probably wrap."
            android:textColor="@color/chatMessageBody"
            android:textSize="18dp"></TextView>

        <TextView
            android:id="@+id/textViewCreatedOn"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewMessage"
            android:layout_alignParentEnd="true"
            android:layout_gravity="right"
            android:layout_marginTop="-7dp"
            android:paddingLeft="40dp"
            android:text="12:00 AM"
            android:textAlignment="viewEnd"
            android:textColor="@color/chatTheirTimeStamp1"
            android:textStyle="italic"
            tools:ignore="RtlCompat" />
    </RelativeLayout>

</RelativeLayout>