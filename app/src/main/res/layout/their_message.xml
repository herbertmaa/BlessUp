<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="60dp"
    android:clipToPadding="false"
    android:layout_margin="10dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/their_message"
        android:clipToPadding="false"
        android:paddingLeft="10dp"
        android:paddingRight="20dp">

        <TextView
            android:id="@+id/textViewName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:paddingBottom="4dp"
            android:text="Rose"></TextView>

        <TextView
            android:id="@+id/textViewMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewName"
            android:layout_alignLeft="@+id/textViewName"

            android:elevation="2dp"
            android:paddingHorizontal="16dp"
            android:paddingVertical="5dp"
            android:text="How are you doing? This is a long message that should probably wrap."
            android:textColor="#fff"
            android:textSize="18dp"></TextView>

        <TextView
            android:id="@+id/textViewCreatedOn"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewMessage"
            android:layout_alignRight="@+id/textViewMessage"
            android:layout_gravity="right"
            android:text="Time Sent" />
    </RelativeLayout>

</RelativeLayout>