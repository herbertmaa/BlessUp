<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/LoginButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Check out the login page here!"
        android:onClick="onLoginClick" />

    <Button
        android:id="@+id/SelectReligionButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Choose your religion!"
        android:onClick="onSelectReligionClick" />

    <Button
        android:id="@+id/SelectChatButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onSelectChatClick"
        android:text="Check out the chat layout"/>

    <Button
        android:id="@+id/SelectChurchListings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Church Listings"
        android:onClick="onSelectChurchClick"/>

    <Button
        android:id="@+id/button5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Button" />

    <Button
        android:id="@+id/button4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Button" />
</LinearLayout>
