<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="50dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:fontFamily="@font/indigo_daisy"
                android:text="@string/welcome2"
                android:textSize="125sp" />

            <TextView
                android:layout_width="300dp"
                android:textSize="17sp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="@string/welcome_desc" />
        </LinearLayout>


        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginEnd="75dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <Button
                android:id="@+id/SelectReligionButton"
                style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                android:layout_width="200dp"
                android:layout_height="75dp"
                android:layout_gravity="start"
                android:layout_marginStart="40dp"
                android:layout_marginTop="30dp"
                android:onClick="onSelectReligionClick"
                android:text="@string/selectReligionButtonText"
                android:textColor="@color/backgroundWhite"
                android:textSize="15sp"
                app:backgroundTint="@color/colorPrimaryDark"
                app:icon="@drawable/update_religion_icon"
                app:iconGravity="end"
                app:iconTint="@color/backgroundWhite" />

            <Button
                android:id="@+id/SelectChatChannelButton"
                style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                android:layout_width="200dp"
                android:layout_height="75dp"
                android:layout_gravity="start"
                android:layout_marginStart="40dp"
                android:onClick="onSelectChatChannelClick"
                android:text="@string/selectChatButtonText"
                android:textColor="@color/backgroundWhite"
                android:textSize="15sp"
                app:backgroundTint="@color/colorPrimaryDark"
                app:icon="@drawable/chats_and_groups"
                app:iconGravity="end"

                app:iconTint="@color/backgroundWhite" />

            <Button
                android:id="@+id/SelectChurchesPageView"
                style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                android:layout_width="200dp"
                android:layout_height="75dp"
                android:layout_gravity="start"
                android:layout_marginStart="40dp"
                android:onClick="onSelectChurchesPageViewClick"
                android:text="@string/selectChurchButtonText"
                android:textColor="@color/backgroundWhite"
                android:textSize="15sp"
                app:backgroundTint="@color/colorPrimaryDark"
                app:icon="@drawable/find_a_church"
                app:iconGravity="end"
                app:iconTint="@color/backgroundWhite" />

            <Button
                android:id="@+id/aboutUsButton"
                style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                android:layout_width="200dp"
                android:layout_height="75dp"
                android:layout_gravity="start"
                android:layout_marginStart="40dp"
                android:onClick="onAboutUsPageClick"
                android:text="@string/about_us"
                android:textColor="@color/backgroundWhite"
                android:textSize="15sp"
                app:backgroundTint="@color/colorPrimaryDark"
                app:icon="@drawable/about_us"
                app:iconGravity="end"
                app:iconTint="@color/backgroundWhite" />

            <Button
                android:id="@+id/logoutButton"
                style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                android:layout_width="200dp"
                android:layout_height="75dp"
                android:layout_gravity="start"
                android:layout_marginStart="40dp"
                android:onClick="onLogoutClick"
                android:text="@string/logout"
                android:textColor="@color/backgroundWhite"
                android:textSize="15sp"
                app:backgroundTint="@color/colorPrimaryDark"
                app:icon="@drawable/logout_icon"
                app:iconGravity="end"
                app:iconTint="@color/backgroundWhite" />
        </LinearLayout>


    </RelativeLayout>

</ScrollView>
